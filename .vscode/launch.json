            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/StormDesktop/bin/Debug/net8.0-windows/Storm.dll",
            "args": [],
			"env": {
				"Environment": "Production"
			},
            "cwd": "${workspaceFolder}/StormDesktop",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
