<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:services="clr-namespace:StormLib.Services;assembly=StormLib">

    <DataTemplate DataType="{x:Type services:UnsupportedStream}">
        <StackPanel Style="{StaticResource stackPanelStyle}">
            <ContentPresenter ContentTemplate="{StaticResource BaseStreamTemplate}"
                              Style="{StaticResource contentPresenterStyle}" />
        </StackPanel>
    </DataTemplate>

</ResourceDictionary>